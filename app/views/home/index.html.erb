<div class="container">
  <div class="row row-offcanvas row-offcanvas-right">
    <div class="col-xs-12 col-sm-9">
      <p class="pull-right visible-xs">
        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Toggle nav</button>
      </p>
    </div>
    <div class="jumbotron">
      <%= form_tag(events_path, :method => "get") do %>
        <%# <%= label_tag(:number_of_tickets, "Number of Tickets:") %>
        <%# <%= select_tag(:number_of_tickets, options_for_select(@number_of_tickets)) %>
        <br>
        <%= label_tag(:month_of_the_year, "What Month do you want to attend an event?") %>
        <br>
        <%= select_tag(:month_of_the_year, options_for_select(@month_of_the_year.collect{ |u| [ u[:name], u[:value] ] })) %>
        <br>
        <%= label_tag(:state, "What State?") %>
        <br>
        <%= select_tag(:state, options_for_select(@state.collect{ |u| [ u[:state_name] ] })) %>
        <br>
        <%= label_tag(:listing_count, "How many people?") %>
        <br>
        <%= select_tag(:listing_count, options_for_select(@listing_count.collect{ |u| [ u[:listing_count] ] })) %>
        <br>
        <%= label_tag(:event_type, "What Type of Event would you like to see?") %>
        <br>
        <%= select_tag(:event_type, options_for_select(@event_type.collect{ |u| [ u['name'] ] })) %>
        <br>
        <br>
        <%= submit_tag("Search") %>
      <% end %>
    </div>
  </div><!--/row-->

  <hr>

  <div class="mastfoot">
      <p>Eventify by <%= link_to "John Moon", 'https://www.linkedin.com/in/jmoon90' %></p>
  </div>

</div><!--/.container-->
